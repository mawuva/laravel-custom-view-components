{
    "name": "mawuekom/laravel-custom-view-components",
    "description": "A bunch of commons view components you usually use in your laravel project",
    "keywords": [
        "mawuekom", "laravel", "view-components",
        "laravel-custom-view-components"
    ],
    "homepage": "https://github.com/mawuekom/laravel-custom-view-components",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ephra√Øm Seddor",
            "email": "seddorephraim7@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Mawuekom\\CustomViewComponents\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mawuekom\\CustomViewComponents\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mawuekom\\CustomViewComponents\\CustomViewComponentsServiceProvider"
            ],
            "aliases": {
                "CustomViewComponents": "Mawuekom\\CustomViewComponents\\CustomViewComponentsFacade"
            }
        }
    }
}
